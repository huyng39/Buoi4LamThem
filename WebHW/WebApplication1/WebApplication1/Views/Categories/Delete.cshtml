@model WebApplication1.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h3 style="text-align:center">BẠN CÓ CHẮC CHẮN MUỐN XÓA CATEGORY NÀY?</h3>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Mã Category
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CateID)
            </dd>

            <dt>
               Tên Category
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameCate)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                @Html.ActionLink("Quay lại", "Index", null , new { @class = "btn btn-success" })
            </div>
        }
    </div>
</div>